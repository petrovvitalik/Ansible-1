# syntax=docker/dockerfile:experimental
FROM ubuntu:20.04
ENV TZ=Europe/Moscow
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone
RUN apt update && \
    apt install openssh-client git maven -y
RUN git clone https://github.com/boxfuse/boxfuse-sample-java-war-hello.git
RUN cd /boxfuse-sample-java-war-hello && mvn package
RUN mkdir -p -m 0600 /root/.ssh && ssh-keyscan -p 2020 193.122.59.82 >> /root/.ssh/known_hosts
RUN --mount=type=ssh git clone ssh://git@193.122.59.82:2020/petrovvitalik/Artifact-1.git /Artifact-1/ && \
    cp /boxfuse-sample-java-war-hello/target/*.war /Artifact-1/ && \
    cd /Artifact-1/ && ls
RUN --mount=type=ssh cd /Artifact-1 && git add .
RUN --mount=type=ssh git commit -m "Artifact"
RUN --mount=type=ssh git push